      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "copy-webpack-plugin": "^4.5.0",
    "eslint": "^4.16.0",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    "push.js": "^1.0.5",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10"
  },
  "dependencies": {
    "chalk": "^2.3.2",
    "moment": "^2.21.0",
    "ws": "^4.1.0",
    "yargs": "^11.0.0"
  }
}
