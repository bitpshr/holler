{
  "name": "@bitpshr.net/holler",
  "version": "1.0.2",
  "description": "Holler enables command-line powered JavaScript push notifications.",
  "license": "WTFPL",
  "repository": "github:bitpshr/holler",
  "scripts": {
    "eslint": "eslint **/*.{js,jsx}",
    "test": "jest --coverage --config=.jestrc.json",
